# frozen_string_literal: true

class <%= klass %>
  include Contracts::Core
  include Contracts::Builtin

  # using raising attr_accessor`_with_contract`.
  # attr_accessor_with_contract :property, Class Or Contract
  # attr_accessor_with_contract :name, String

  Contract <%= interactor_klass %> => Any
  def initialize(interactor)
    @interactor = interactor
  end

  Contract nil => <%= klass %>
  def perform
    tap do
      # do something
    end
  end

  class << self
    Contract <%= interactor_klass %> => <%= klass %>
    def perform_now(interactor)
      new(interactor).perform
    end
  end
end
